{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 800,
    "config": {
        "axis": {
            "grid": true,
            "gridColor": "#dedede",
            "gridOpacity": 1,
            "domainColor": "null"
        },
        "legend": {
            "titleColor": "black",
            "titleFontSize": 14,
            "labelFontSize": 12,
            "labelColor": "black",
            "symbolStrokeWidth": 2,
            "symbolSize": 100,
            "symbolType": "square",
            "orient": "bottom",
            "clipHeight": 30,
            "fillColor": "white"
        },
        "background": "null",
        "view": {
            "stroke": "null"
        }
    },
    "projection": {
        "type": "naturalEarth1",
        "rotate": {
            "expr": "[rotate0, 0]"
        }
    },
    "params": [
        {
            "name": "rotate0",
            "value": 0,
            "bind": {
                "input": "range",
                "min": -90,
                "max": 90,
                "step": 1
            }
        }
    ],
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "aliceblue"
            }
        },
        {
            "data": {
              "sphere": true
            },
            "mark": {
              "type": "geoshape",
              "fill": "aliceblue"
            }
          },
          {
            "data": {
              "graticule": {
                "step": [30, 30]
              }
            },
            "mark": {
              "type": "geoshape",
              "stroke": "black",
              "strokeWidth": 0.5
            }
          },
        {
            "data": {
                "name": "world",
                "url": "../data/world-110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "../data/final.csv"
                        },
                        "key": "Country",
                        "fields": [
                            "Population",
                            "Unicorn Count",
                            "Unicorns / 10M Population",
                            "Bin"
                        ]
                    }
                },
                {
                    "calculate": "datum.Bin == null ? '0' : datum.Bin",
                    "as": "Bin"
                }
            ],
            "params": [
                {
                    "name": "bin_highlight",
                    "select": {
                        "type": "point",
                        "fields": ["Bin"]
                    },
                    "bind": "legend"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "mintcream",
                "stroke": "black",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "fill": {
                    "field": "Bin",
                    "type": "nominal",
                    "legend": {
                        "title": "Number of Unicorns",
                        "clipHeight": 30,
                        "orient": "bottom-right"
                    },
                    "sort": [
                        "0",
                        "1-3",
                        "4-6",
                        "7-10",
                        "11-20",
                        "21-50",
                        "51+"
                    ],
                    "scale": {
                        "range": [
                            "#ECECEC",
                            "#BFD3C1",
                            "#94A89A",
                            "#6A7E76",
                            "#3F5452",
                            "#1B2B2B",
                            "#000000"
                        ]
                    }
                },
                "opacity": {
                    "condition": {"param": "bin_highlight", "value": 1},
                    "value": 0.2
                }
            }
        }
    ]
}