{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top 10 Cities with the Most Unicorn Companies",
  
  "data": {
    "url": "../data/unicorn.csv"
  },
  "width": 600,
  "height": 700,
  "config": {
    "background": "#dedede",
    "axis": {
        "labelFontSize": 12,  
        "titleFontSize": 14   
      }
},
  "transform": [
    {
      "aggregate": [
        {
          "op": "count",
          "as": "count"
        },
        {
          "op": "sum",
          "field": "Valuation ($B)",
          "as": "totalValuation"
        }
      ],
      "groupby": [
        "City",
        "Country"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [
        {
          "field": "totalValuation",
          "order": "descending"
        }
      ]
    },
    {
      "calculate": "datum['rank']",
      "as": "rank"
    },
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "totalValuation",
      "type": "quantitative",
      "title": "Total Valuation of Unicorn Companies"
    },
    "y": {
      "field": "City",
      "type": "nominal",
      "title": "City",
      "sort": {
        "field": "rank"
      }
    },
    "tooltip": [
      {
        "field": "City",
        "type": "nominal",
        "title": "City"
      },
      {
        "field": "Country",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "count",
        "type": "nominal",
        "title": "Number of Unicorns",
        "format": ","
      },
      {
        "field": "totalValuation",
        "type": "quantitative",
        "title": "Total Company Valuation ($B)",
        "format": ","
      }
    ],
    "stroke": {
      "value": "black"
    },
    "opacity": {
      "condition": {
        "test": "datum.totalValuation >= 200",
        "value": 1
      },
      "value": 0.2
    },
    "fill": {
      "value": "#3F5452"
    }
  }
}