{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "name": "unicorns",
        "url": "../data/unicorn.csv"
    },
    "config": {
        "background": "#dedede",
        "axis": {
            "labelFontSize": 12,  
            "titleFontSize": 14   
          }
    },
    "vconcat": [
        {
            "transform": [
                {
                    "aggregate": [
                        {
                            "op": "count",
                            "field": "Company",
                            "as": "count"
                        }
                    ],
                    "groupby": [
                        "Founded Year",
                        "Industry"
                    ]
                }
            ],
            "width": 1500,
            "height": 600,
            "layer": [{
                "mark": {
                    "type": "circle",
                    "opacity": 0.8,
                    "stroke": "black",
                    "strokeWidth": 1
                },
                "encoding": {
                    "x": {
                        "field": "Founded Year",
                        "type": "temporal",
                        "axis": {
                            "grid": false,
                            "title": ""
                        },
                        "scale": {
                            "domain": {
                                "param": "brush"
                            }
                        }
                    },
                    "y": {
                        "field": "Industry",
                        "type": "nominal",
                        "axis": {
                            "title": ""
                        }
                    },
                    "size": {
                        "field": "count",
                        "type": "quantitative",
                        "title": "Count of companies",
                        "legend": null,
                        "scale": {
                            "rangeMax": 400
                        }
                    },
                    "color": {
                        "field": "Industry",
                        "type": "nominal",
                        "legend": null
                    },
                    "opacity": {
                        "value": 0.9
                    },
                    "tooltip": [
                        {"field": "Founded Year", "type": "temporal", "title": "Year Founded", "format": "%Y"},
                        {"field": "count", "type": "nominal", "title": "Number of Unicorns", "format": ","},
                        {"field": "Industry", "type": "nominal", "title": "Industry"}
                    ]
                }
            }]
        },
        {
            "width": 1500,
            "height": 150,
            "layer": [
              {
                "transform": [
                  {
                    "aggregate": [
                      {
                        "op": "count",
                        "field": "Company",
                        "as": "count"
                      }
                    ],
                    "groupby": [
                      "Founded Year"
                    ]
                  }
                ],
                "params": [
                  {
                    "name": "brush",
                    "select": {
                      "type": "interval",
                      "encodings": [
                        "x"
                      ]
                    }
                  }
                ],
                "mark": {
                  "type": "circle",
                  "opacity": 0.8,
                  "stroke": "black",
                  "strokeWidth": 1
                },
                "encoding": {
                  "x": {
                    "field": "Founded Year",
                    "type": "temporal"
                  },
                  "y": {
                    "field": "count",
                    "type": "quantitative",
                    "axis": {
                      "tickCount": 3,
                      "grid": false
                    },
                    "title": "Total Number of Unicorns"
                  },
                  "tooltip": [
                    {"field": "Founded Year", "type": "temporal", "title": "Year Founded", "format": "%Y"},
                    {"field": "count", "type": "nominal", "title": "Total Number of Unicorns", "format": ","}
                  ]
                }
              },
              {
                "mark": {
                  "type": "rule",
                  "color": "red",
                  "style": "dashed"
                },
                "encoding": {
                  "y": {
                    "value": 137
                  }
                }
              },
              {
                "mark": {
                  "type": "text",
                  "align": "right",
                  "baseline": "bottom",
                  "dx": 100,
                  "dy": -5,
                  "fontSize": 16,
                  "color": "red",
                  "fontWeight": "lighter"
                },
                "encoding": {
                  "x": {
                    "value": 300
                  },
                  "y": {
                    "value": 90
                  },
                  "text": {
                    "value": "Average Unicorn Companies Founded per Year: 10.16"
                  }
                }
              }
            ]
          }
          
    ]
}