{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "name": "unicorns",
        "url": "../data/unicorn.csv"
    },
    "title": "Unicorn Companies Founded per Year",
    "config": {
        "title": {"align": "left"}
    },
    "vconcat": [
        {
            "transform": [
                {
                    "aggregate": [
                        {
                            "op": "count",
                            "field": "Company",
                            "as": "count"
                        }
                    ],
                    "groupby": [
                        "Founded Year",
                        "Industry"
                    ]
                }
            ],
            "width": 600,
            "height": 400,
            "layer": [{
                "params": [
                    {
                        "name": "count_highlight",
                        "select": {
                            "type": "point",
                            "fields": [
                                "count"
                            ]
                        },
                        "bind": "legend"
                    }
                ],
                "mark": {
                    "type": "circle",
                    "opacity": 0.8,
                    "stroke": "black",
                    "strokeWidth": 1,
                    "tooltip": true
                },
                "encoding": {
                    "x": {
                        "field": "Founded Year",
                        "type": "temporal",
                        "axis": {
                            "grid": false
                        },
                        "scale": {
                            "domain": {
                                "param": "brush"
                            }
                        }
                    },
                    "y": {
                        "field": "Industry",
                        "type": "nominal",
                        "axis": {
                            "title": ""
                        }
                    },
                    "size": {
                        "field": "count",
                        "type": "quantitative",
                        "title": "Count of companies",
                        "legend": {
                            "clipHeight": 30
                        },
                        "scale": {
                            "rangeMax": 270
                        }
                    },
                    "color": {
                        "field": "Industry",
                        "type": "nominal",
                        "legend": null
                    },
                    "opacity": {
                        "condition": {
                            "param": "count_highlight",
                            "value": 1
                        },
                        "value": 0.2
                    }
                }
            }]
        },
        {
            "width": 600,
            "height": 100,
            "layer": [
              {
                "transform": [
                  {
                    "aggregate": [
                      {
                        "op": "count",
                        "field": "Company",
                        "as": "count"
                      }
                    ],
                    "groupby": [
                      "Founded Year"
                    ]
                  }
                ],
                "params": [
                  {
                    "name": "brush",
                    "select": {
                      "type": "interval",
                      "encodings": [
                        "x"
                      ]
                    }
                  }
                ],
                "mark": {
                  "type": "circle",
                  "opacity": 0.8,
                  "stroke": "black",
                  "strokeWidth": 1,
                  "tooltip": true
                },
                "encoding": {
                  "x": {
                    "field": "Founded Year",
                    "type": "temporal"
                  },
                  "y": {
                    "field": "count",
                    "type": "quantitative",
                    "axis": {
                      "tickCount": 3,
                      "grid": false
                    }
                  }
                }
              },
              {
                "mark": {
                  "type": "rule",
                  "color": "red",
                  "style": "dashed"
                },
                "encoding": {
                  "y": {
                    "value": 91
                  }
                }
              },
              {
                "mark": {
                  "type": "text",
                  "align": "right",
                  "baseline": "bottom",
                  "dx": -5,
                  "dy": -5,
                  "fontSize": 10,
                  "color": "red",
                  "fontWeight": "lighter"
                },
                "encoding": {
                  "x": {
                    "value": 300
                  },
                  "y": {
                    "value": 90
                  },
                  "text": {
                    "value": "Average Unicorn Companies Founded per Year: 10.16"
                  }
                }
              }
            ]
          }
          
    ]
}